{
  "manifest_version": 3,
  "name": "3CX Audio Extension",
  "version": "1.0",
  "description": "Extensão para integração com o chat do 3CX",
  
  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.3cx.com/*",
        "*://*.3cx.net/*",
        "*://*.3cx.org/*",
        "*://*.my3cx.com.br/*"
      ],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "host_permissions": [
    "*://*.3cx.com/*",
    "*://*.3cx.net/*",
    "*://*.3cx.org/*",
    "*://*.my3cx.com.br/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*"
  ]
} 